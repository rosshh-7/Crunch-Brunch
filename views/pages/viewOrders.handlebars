
<section class="section admin-section">
  <div class="container">
    <div class="row">
        <h1 class="main-heading text-center mt-5 mb-5">User Orders</h1>
    </div>
    <div class="accordion-item mb-5">
        <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
            User Orders
        </button>
        </h2>
        <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
            <div class="accordion-body ">      
              <table class="table table-striped table-dark table-hover" id="ordertable">
                <tr>
                  <th>Order Number</th>
                  <th>Order Date</th>
                  <th>View Details</th>
                </tr>
                
                
                {{#each json}}
                <tr>
                  <td>#{{order_id}}</td>
                  <td>{{date}}</td>
                  <td>
                    <form method="post" action="./orderDetails">
                      <input type="text" name="orderid" value="{{order_id}}" hidden>
                      <button class="btn btn-success" type="submit"><span class='material-icons'>Details</span></button>
                    </form>
                  </td>
                </tr>
                {{/each}}


              </table> 
            </div>
        </div>
    </div>
  </div>
</section>

